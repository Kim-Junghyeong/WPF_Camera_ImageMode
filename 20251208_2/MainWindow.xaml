<Window x:Class="_20251208_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20251208_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Margin="0 0 0 10"
                    VerticalAlignment="Center">

            <Button x:Name="BtnLoadImage"
                    Content="이미지 불러오기"
                    Width="120"
                    Margin="0 0 10 0"
                    Click="BtnLoadImage_Click"/>

            <Button x:Name="BtnStartCamera"
                    Content="카메라 시작"
                    Width="100"
                    Margin="0 0 10 0"
                    Click="BtnStartCamera_Click"/>

            <Button x:Name="BtnStopCamera"
                    Content="카메라 정지"
                    Width="100"
                    Margin="0 0 20 0"
                    Click="BtnStopCamera_Click"/>

            <TextBlock Text="처리 모드:"
                       VerticalAlignment="Center"
                       Margin="0 0 5 0"/>

            <ComboBox x:Name="CmbMode"
                      Width="150"
                      SelectionChanged="CmbMode_SelectionChanged">
                <ComboBoxItem Content="원본" IsSelected="True"/>
                <ComboBoxItem Content="Gray"/>
                <ComboBoxItem Content="Canny Edge"/>
                <ComboBoxItem Content="Binary(Threshold)"/>
            </ComboBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="0 0 5 0">
                <Grid>
                    <TextBlock Text="원본 / 카메라"
                               Margin="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"/>
                    <Image x:Name="ImgOriginal"
                           Stretch="Uniform"
                           Margin="5,20,5,5"/>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5 0 0 0">
                <Grid>
                    <TextBlock Text="처리 결과"
                               Margin="5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"/>
                    <Image x:Name="ImgProcessed"
                           Stretch="Uniform"
                           Margin="5,20,5,5"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
